@model FootballWebApp.DTo.SponsorerDto


<h3>Are you sure you want to delete this sponsorer?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            NetWorth:
        </dt>
        <dd class="col-sm-10">
            @Model.NetWorth
        </dd>
         <dt class="col-sm-2">
            Number Of Companies:
        </dt>
        <dd class="col-sm-10">
            @Model.SponsorerNumberOfCompanies
        </dd>
         <dt>  Clubs Sponsored : </dt>
          @foreach (var item in   Model.Clubs)
          {
            <dd> @item.ClubName</dd> 
            
        }
        
        
        
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>