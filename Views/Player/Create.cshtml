@model FootballWebApp.DTo.CreatePlayerRequestModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FootballWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Create</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to sign a Player.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="JerseyNumber" class="control-label"></label>
                            <input asp-for="JerseyNumber" class="form-control" />
                            <span asp-validation-for="JerseyNumber" class="text-danger"></span>
                        </div>
                          <div class="form-group col-sm-6">
                            <label asp-for="PlayingPosition" class="control-label"></label>
                            <input asp-for="PlayingPosition" class="form-control" />
                            <span asp-validation-for="PlayingPosition" class="text-danger"></span>
                        </div>
                             <div class="form-group col-sm-6">
                            <label asp-for="DateOfBirth" class="control-label"></label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                              <div class="form-group col-sm-6">
                            <label asp-for="StrongFoot" class="control-label"></label>
                            <input asp-for="StrongFoot" class="form-control" />
                            <span asp-validation-for="StrongFoot" class="text-danger"></span>
                        @* </div>
                               <div class="form-group col-sm-6">
                            <label asp-for="ClubId" class="control-label"></label>
                            <input asp-for="ClubId" class="form-control" />
                            <span asp-validation-for="ClubId" class="text-danger"></span>
                        </div> *@
                               <div class="form-group col-sm-6">
                            <label asp-for="Nationality" class="control-label"></label>
                            
                            <input asp-for="Nationality" class="form-control" />
                            <span asp-validation-for="Nationality" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <div class="form-row">
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label  class="control-label">Club</label>
                            <select asp-for="ClubId" class="form-control" asp-items="ViewBag.Clubs">
                                <option value="">--Select Club--</option>
                            </select>
                        </div>
                       
                    </div>
                    <div>
                        <div class="form-group">
                            <label class="control-label">Select Player Photo</label>
                            <input name="playerPics" type="file" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}